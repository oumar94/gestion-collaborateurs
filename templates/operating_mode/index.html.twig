{% extends 'base.html.twig' %}

{% block title %}OperatingMode index{% endblock %}

{% block body %}
    <div class="container mt-4">
    <h1>OperatingMode index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for operating_mode in operating_modes %}
            <tr>
                <td>{{ operating_mode.id }}</td>
                <td>{{ operating_mode.name }}</td>
                <td>
                    <a href="{{ path('operating_mode_show', {'id': operating_mode.id}) }}">show</a>
                    <a href="{{ path('operating_mode_edit', {'id': operating_mode.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('operating_mode_new') }}">Create new</a>
{% endblock %}